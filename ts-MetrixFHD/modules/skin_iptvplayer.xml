    <!-- IPTVChoiceBoxWidget -->
    <screen name="IPTVChoiceBoxWidget" position="195,210" size="900,600" title="Select option">
        <widget name="title" position="15,15" size="680,38" font="SetrixHD;36" foregroundColor="metrixForeground" backgroundColor="metrixBackground" transparent="1" />
        <widget name="list" position="0,30" size="680,450" itemHeight="45" scrollbarMode="showOnDemand" transparent="1" />
        <applet type="onLayoutFinish">
from enigma import eSize, ePoint

orgwidth = self.instance.size().width()
orgpos = self.instance.position()
textsize = self["title"].getSize()

# y size still must be fixed in font stuff...
textsize = (textsize[0] + 40, textsize[1] + 40)
count = len([ (x,) for x in self.params['options']])
if count &gt; 12:
   count = 12
offset = 45 * count
wsizex = textsize[0]
wsizey = textsize[1] + offset + 30

if (680 &gt; wsizex):
   wsizex = 680
wsize = (wsizex, wsizey)

# resize
self.instance.resize(eSize(*wsize))

# resize label
self["title"].instance.resize(eSize(*textsize))

# move list
listsize = (wsizex - 30, 45 * count)
self["list"].instance.move(ePoint(15, textsize[1]))
self["list"].instance.resize(eSize(*listsize))

# center window
newwidth = wsize[0]
self.instance.move(ePoint((1920-wsizex)/2, (1080-wsizey)/2))
        </applet>
